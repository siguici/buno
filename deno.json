{
  "name": "@siguici/buno",
  "version": "0.0.0",
  "exports": {
    ".": "./jsr/index.ts"
  },
  "include": ["deno.json", "jsr/*.ts", "README.md", "LICENSE.md"],
  "exclude": [
    ".*",
    "jsr/*.test.ts",
    "js/*",
    "ts/*",
    "src/*",
    "scripts/*",
    "tests/*",
    "biome.json",
    "tsconfig.json",
    "deno.lock"
  ],
  "publish": {
    "include": ["jsr/**", "deno.json", "README.md", "LICENSE.md"],
    "exclude": ["!jsr/*.ts"]
  },
  "compilerOptions": {
    "lib": [
      "esnext",
      "webworker",
      "deno.ns",
      "deno.window",
      "dom",
      "dom.iterable",
      "dom.asynciterable"
    ]
  },
  "fmt": {
    "useTabs": false,
    "lineWidth": 80,
    "indentWidth": 2,
    "semiColons": true,
    "singleQuote": true,
    "proseWrap": "preserve"
  },
  "tasks": {
    "check": "deno task check:fmt && deno task check:lint && deno task check:types",
    "check:fmt": "deno fmt --check",
    "check:lint": "deno lint",
    "check:types": "deno check jsr/*.ts",
    "fix": "deno lint --fix && deno fmt"
  }
}
